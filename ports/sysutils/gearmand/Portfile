# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0

name                gearmand
version             1.1.12
maintainers         openmaintainer
categories          sysutils net devel

license             BSD
platforms           darwin
homepage            http://gearman.org/

description         Meta port for Gearmand Series 1.0 and 1.2
long_description    ${description}

distfiles
use_configure no
build {}
destroot {
    xinstall -m 0755 -d ${destroot}${prefix}/share/${name}
    touch ${destroot}${prefix}/share/${name}/${branch}
}

if {[variant_isset gearmand10]} {
    set branch gearmand10
} else {
    set branch gearmand12
    default_variants    +gearmand12
}

variant gearmand10 conflicts gearmand12 description {use gearmand series 1.0} {
    depends_lib-append  port:gearmand10
}

variant gearmand12 conflicts gearmand10 description {use gearmand series 1.2} {
    depends_lib-append  port:gearmand12
}

livecheck.type      none
