# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0
PortGroup           python 1.0
PortGroup           select 1.0

name                py-uwsgi
version             1.9.13
revision            0
categories-append   www
license             GPL-2+
maintainers         openmaintainer

description         uWSGI application server container
long_description \
   The uWSGI project aims at developing a full stack for building \
   (and hosting) clustered/distributed network applications.

homepage        http://projects.unbit.it/uwsgi/
master_sites    http://projects.unbit.it/downloads/
distname        uwsgi-${version}
checksums \
    rmd160  42ae40bffe471898e59837e3b90feb3a50d49583 \
    sha256  ac1532698493b117d1b95b0d0bab2113088fc3f0f23a765ddb59504bece3c26e

python.versions 24 25 26 27 31 32 33
python.default_version 27

if {$subport != $name} {
    depends_build       port:py${python.version}-setuptools
    depends_run         port:uwsgi_select
    depends_lib-append  port:libiconv \
                        port:libxml2 \
                        port:libyaml \
                        port:pcre \
                        port:openssl \
                        port:zlib \
                        port:zmq22

    select.group    uwsgi
    select.file     ${filespath}/py${python.version}-uwsgi

    notes "
To make the Python ${python.branch} version of py-uwsgi the one that is run\
when you execute the commands without a version suffix, e.g. 'uwsgi', run:

port select --set ${select.group} [file tail ${select.file}]
"
    livecheck.type  none
} else {
    livecheck.type  regex
    livecheck.url   ${homepage}
    livecheck.regex {uwsgi-([0-9.]+)\.tar}
}
