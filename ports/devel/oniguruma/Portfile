# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0

name                oniguruma
version             5.9.5
maintainers         openmaintainer
categories          devel

license             BSD
platforms           darwin
homepage            http://www.geocities.jp/kosako3/oniguruma/ \
                    https://github.com/k-takata/Onigmo

description         Meta port for Oniguruma 4.x, 5.x and Onigumo
long_description    ${description}

distfiles
use_configure no
build {}
destroot {
    xinstall -m 0755 -d ${destroot}${prefix}/share/${name}
    touch ${destroot}${prefix}/share/${name}/${branch}
}

if {[variant_isset onigumo]} {
    set branch onigumo
} elseif {[variant_isset oniguruma4]} {
    set branch oniguruma4
} else {
    set branch oniguruma5
    default_variants    +oniguruma5
}

variant oniguruma4 conflicts oniguruma4 onigumo description {use oniguruma4} {
    depends_lib-append  port:oniguruma4
}

variant oniguruma5 conflicts oniguruma4 onigumo description {use oniguruma5} {
    depends_lib-append  port:oniguruma5
}

variant onigumo conflicts oniguruma4 oniguruma5 description {use onigumo} {
    depends_lib-append  port:onigumo
}

livecheck.type      none
