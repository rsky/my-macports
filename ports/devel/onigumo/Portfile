# $Id$

PortSystem          1.0

name                onigumo
version             5.9.5
set mod_version     1
maintainers         openmaintainer
categories          devel

license             BSD
platforms           darwin
homepage            https://github.com/k-takata/Onigmo

description         A regular expressions library forked from Oniguruma.
long_description    Onigmo is a regular expressions library forked from Oniguruma. \
                    Some of new features introduced in Perl 5.10+ can be used.

distname            onig-${version}-mod${mod_version}
worksrcdir          Onigmo-${distname}
master_sites        https://github.com/k-takata/Onigmo/archive/
checksums           rmd160  9e1906dfef8b435e195c02d68fd6a224faa202cb \
                    sha256  49036f9831ed3bfb865f83c8ad6ff0d17638ecb21096164130eb256721d59b66

conflicts           oniguruma4 oniguruma5

post-destroot {
    set dest_doc ${destroot}${prefix}/share/doc/oniguruma
    xinstall -d ${dest_doc}
    xinstall -m 644 -W ${worksrcpath} \
        AUTHORS COPYING HISTORY README README.ja \
        index.html index_ja.html \
        ${dest_doc}
    copy ${worksrcpath}/doc ${dest_doc}
}

livecheck.type      regex
livecheck.url       https://github.com/k-takata/Onigmo/releases
livecheck.regex     ">onig-(\\d+(?:\\.\\d+)*)-mod(?:\\d+)<"
