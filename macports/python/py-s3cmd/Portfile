# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem      1.0
PortGroup       python 1.0

name            py-s3cmd
version         1.1.0-beta3
categories-append   net sysutils
license         GPL-2+
maintainers     openmaintainer
supported_archs noarch

description     Command line tool for managing Amazon S3 and CloudFront services
long_description \
   S3cmd lets you copy files from/to Amazon S3 \
   (Simple Storage Service) using a simple to use \
   command line client. Supports rsync-like backup, \
   GPG encryption, and more. Also supports management \
   of Amazon's CloudFront content delivery network.

homepage        http://s3tools.org/s3cmd \
                http://pypi.python.org/pypi/s3cmd/
master_sites    http://pypi.python.org/packages/source/s/s3cmd/
distname        s3cmd-${version}
checksums \
    md5    ff76d6f266342598e849dd2acd8500db \
    rmd160 ad4891d2a88e912d273c493f2e09107b66706cfc \
    sha256 6d9f566cbc768d5be4e12e59fc5137d44ddba0805e5acb773477214070c72734

python.versions 24 25 26 27
python.default_version 27

if {$subport != $name} {
    depends_build-append    port:py${python.version}-distribute

    if {${python.version} == 24} {
        depends_lib-append  port:py24-elementtree
    }

    if {${python.version} == ${python.default_version}} {
        default_variants    +no_suffix
    }
}

post-destroot {
    set python_prefix ${frameworks_dir}/Python.framework/Versions/${python.branch}
    file attributes ${destroot}${python_prefix}/share/man/man1/s3cmd.1 -permissions 0644
}

variant no_suffix description {Don't add the Python version suffix for the executables} {
    python.link_binaries_suffix
}

livecheck.type  regex
livecheck.url   http://pypi.python.org/pypi/s3cmd/
livecheck.regex {s3cmd ([0-9.]+(?:-[a-z]+[0-9]+)?)}
